# MoMo First Boot Wizard - hostapd configuration
# Generated by firstboot module

interface={{ interface }}
driver=nl80211

# Network settings
ssid={{ ssid }}
hw_mode=g
channel={{ channel }}
wmm_enabled=0
macaddr_acl=0

# Auth settings
auth_algs=1
ignore_broadcast_ssid={{ 1 if hidden else 0 }}

# WPA2 settings
wpa=2
wpa_passphrase={{ password }}
wpa_key_mgmt=WPA-PSK
wpa_pairwise=TKIP
rsn_pairwise=CCMP

# Country code (for regulatory)
country_code={{ country_code | default('TR') }}

# Performance settings
max_num_sta=10

