# MoMo First Boot Wizard - dnsmasq configuration
# Generated by firstboot module

# Interface binding
interface={{ interface }}
bind-interfaces

# DHCP range
dhcp-range={{ dhcp_start }},{{ dhcp_end }},{{ netmask }},{{ dhcp_lease }}

# DHCP options
dhcp-option=3,{{ ip_address }}  # Gateway
dhcp-option=6,{{ ip_address }}  # DNS server

# Redirect all DNS queries to our IP (captive portal)
address=/#/{{ ip_address }}

# Logging
log-queries
log-dhcp

